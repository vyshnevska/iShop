<h1>Listing cart_items</h1>

<table>
  <thead>
    <tr>
      <th><%= I18n.t('views.cart_items.product')%></th>
      <th><%= I18n.t('views.cart_items.cart')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.product %></td>
        <td><%= cart_item.cart %></td>
        <td><%= link_to I18n.t('views.nav.show'), cart_item %></td>
        <td><%= link_to I18n.t('views.nav.edit'), edit_cart_item_path(cart_item) %></td>
        <td><%= link_to I18n.t('views.nav.delete'), cart_item, method: :delete, data: { confirm: I18n.t('views.nav.confirm_delete') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t('views.cart_items.new'), new_cart_item_path %>
