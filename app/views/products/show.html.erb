<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class='product_details'>
  <div class='row'>
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
      <dd><%= @product.title %></dd>
      <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
      <dd><%= @product.description %></dd>
      <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
      <dd><%= image_tag(@product.image_url, class: 'img-thumbnail') if @product.image?%></dd>
      <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
      <dd>
        <span><%= number_to_currency(@product.price) %></span>
      </dd>
    </dl>
  </div>
  <div class='actions'>
    <%= render 'shared/form_actions', rsr_name: model_class.model_name, rsr_obj: @product %>
  </div>

</div>
