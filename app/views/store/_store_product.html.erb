 <div class="row">
  <div class="large-12 columns">
    <div class="panel">
      <div class="row">

        <div class="large-2 small-6 columns image">
          <%= link_to image_tag(product.image_url, class: 'img-thumbnail'), product_path(product) %>
        </div>

        <div class="large-10 small-6 columns">
          <strong><%= product.title %><hr/></strong>

          <div class="panel">
            <p><%= sanitize(product.description) %></p>
            <h6 class="subheader"><strong class='price'><%= number_to_currency(product.price)%></strong></h6>
          </div>

          <%= button_to I18n.t('views.store.index.add_to_cart'), cart_items_path(product_id: product), method: :post, remote: true, class: 'button tiny radius' %>
        </div>

      </div>
    </div>
  </div>
</div>
