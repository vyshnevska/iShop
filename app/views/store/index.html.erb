<div class='page-header'>
  <h1><%= I18n.t('views.store.index.title')%></h1>
</div>
<table class='table table-striped'>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class='image'>
          <%= link_to image_tag(product.image_url, class: 'img-thumbnail'), product_path(product) %>
        </td>
        <td>
          <div class='row warning'>
            <div class='col-md-12'><strong><%= product.title %></strong></div>
          </div>
          <div class='row'>
            <div class='col-md-12'><p><%= sanitize(product.description) %></p></div>
          </div>
           <div class='row'>
            <div class='col-md-6'>
              <div class='price_line'>
                <span class='price'><%= number_to_currency(product.price)%></span>
              </div>
            </div>
            <div class='col-md-6'>
              <%= link_to I18n.t('views.store.index.add_to_cart'), cart_items_path(product_id: product), method: :post , class: btn_class_for(:add_to_cart) %></div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
